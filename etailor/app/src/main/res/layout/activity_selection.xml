<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Selection_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="171dp"
            android:layout_height="171dp"
            android:background="#FDFDFD"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:gravity="bottom|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Welcome,"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Selection_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aleo_bold"
                    android:text="Md Arik Rayhan"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aleo_bold"
                    android:text="great to see you again"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#FDFDFD"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@mipmap/my_home" />

        <Button
            android:id="@+id/my_home"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/menu_my_home"
            android:textColor="#000000"
            android:textStyle="bold"
            app:backgroundTint="#FDFDFD" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#FDFDFD"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@mipmap/my_orders" />

        <Button
            android:id="@+id/my_orders"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/menu_my_orders"
            android:textColor="#000000"
            android:textStyle="bold"
            app:backgroundTint="#FDFDFD" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#FDFDFD"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@mipmap/my_account" />

        <Button
            android:id="@+id/my_account"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/menu_my_account"
            android:textColor="#000000"
            android:textStyle="bold"
            app:backgroundTint="#FDFDFD" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#FDFDFD"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@mipmap/my_tailor" />

        <Button
            android:id="@+id/my_tailor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/menu_my_tailor"
            android:textColor="#000000"
            android:textStyle="bold"
            app:backgroundTint="#FDFDFD" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#FDFDFD"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@mipmap/my_info" />

        <Button
            android:id="@+id/my_info"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/menu_my_info"
            android:textColor="#000000"
            android:textStyle="bold"
            app:backgroundTint="#FDFDFD" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#FDFDFD"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@mipmap/sign_out" />

        <Button
            android:id="@+id/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/menu_sign_out"
            android:textColor="#000000"
            android:textStyle="bold"
            app:backgroundTint="#FDFDFD" />

    </LinearLayout>

</LinearLayout>